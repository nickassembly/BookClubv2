@model UserBook
@{ 
    ViewData["Title"] = "User Book List";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
            @foreach (var b in Model.Books)
            {
                <h4>@b.Title</h4>
                <ul>
                    <li>@b.Description</li>
                    <li>@b.Identifier</li>
                    <ul>

                    @foreach (var a in b.Authors)
                    {
                        <li>@a.Firstname @a.Lastname</li>
                    }
                    </ul>
                </ul>
            }

    </div>
</div>
