@model UserAuthor
@{
    ViewData["Title"] = "User Author List";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @foreach (var a in Model.Authors)
        {
            <h3>@a.Firstname @a.Lastname</h3>
            <h4>@a.AuthorBio</h4>

            <ul>
                @foreach (var b in a.Books)
                {
                   <li>@b.Title</li>
                }
            </ul>

        }

    </div>
</div>
