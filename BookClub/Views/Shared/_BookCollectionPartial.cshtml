@model List<BookViewModel>

<h4 class="mt-3 text-center">Book List </h4>
<p>Possible other things to track here: Book News? List separately or in each book card?</p>

@for (int i = 0; i < Model.Count; i += 2)
{
    <div class="row">
        <div class="col-6">
            <div class="card">
                <span id="isbn">ISBN: <span id="isbnValue">@Model[i].Identifier</span> </span>

                <img id="" src=@Model[i].ImageUrl style="height:150px;width:100px;float:left;" class="card-img-top img-thumbnail" alt="book image">
                <div class="card-body">
                    <h4 class="card-title"><strong>@Model[i].Title</strong></h4>
                    <div>
                        @foreach (var author in Model[i].Authors)
                        {
                            <span>@author.Firstname @author.Lastname</span>
                        }
                    </div>
                    <div>
                        @foreach (var genre in Model[i].Genres)
                        {
                            <span>@genre.GenreName</span>
                        }
                    </div>
                    <p style="max-height: 300px;overflow-y: scroll" id="description" class="card-text">@Model[i].Description</p>
                </div>
            </div>
        </div>
        <div class="col-6">
             <div class="card">
                <span id="isbn">ISBN: <span id="isbnValue">@Model[i + 1].Identifier</span> </span>

                <img id="" src=@Model[i + 1].ImageUrl style="height:150px;width:100px;float:left;" class="card-img-top img-thumbnail" alt="book image">
                <div class="card-body">
                    <h4 class="card-title"><strong>@Model[i + 1].Title</strong></h4>
                    <div>
                        @foreach (var author in Model[i + 1].Authors)
                        {
                            <span>@author.Firstname @author.Lastname</span>
                        }
                    </div>
                    <div>
                        @foreach (var genre in Model[i + 1].Genres)
                        {
                            <span>@genre.GenreName</span>
                        }
                    </div>
                    <p style="max-height: 300px;overflow-y: scroll" id="description" class="card-text">@Model[i + 1].Description</p>
                </div>
            </div>
        </div>
    </div>
}

